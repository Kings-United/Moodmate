							{
								"key": "Authorization",
								"value": "Bearer {{authToken}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"content\": \"Updated: Today was a great day! I felt really productive and happy.\",\n  \"mood\": 9,\n  \"emotions\": [\"happy\", \"productive\", \"grateful\", \"excited\"],\n  \"tags\": [\"work\", \"productivity\", \"success\"]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/journal/{{journalEntryId}}",
							"host": [
